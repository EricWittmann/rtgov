<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  	<modelVersion>4.0.0</modelVersion>
	<groupId>org.overlord.bam.content.services</groupId>
	<artifactId>overlord-bam-services</artifactId> 
	<packaging>war</packaging>
	<name>Overlord BAM::Content::Services::War</name>

	<parent>
		<groupId>org.overlord.bam.content</groupId>
		<artifactId>services</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<dependencies>		
		<dependency>
			<groupId>org.overlord.bam.content.services</groupId>
			<artifactId>service-dependency-rests</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.overlord.bam.active-queries</groupId>
					<artifactId>active-collection</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.overlord.bam.activity-analysis</groupId>
					<artifactId>analytics</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.content.services</groupId>
			<artifactId>call-trace-rests</artifactId>
			<version>${project.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.overlord.bam.activity-management</groupId>
					<artifactId>activity</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<!-- Test dependencies -->
		
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
 			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<finalName>${project.artifactId}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
 					<archive>
						<manifestEntries>
							<Dependencies>org.overlord.bam export</Dependencies>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
