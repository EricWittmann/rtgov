<assembly>
	<!-- id typically identifies the "type" (src vs bin etc) of the assembly -->
	<id>bin</id>
	<includeBaseDirectory>true</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>

	<fileSets>

		<!--Copy files like License and readmes etc -->	
		<fileSet>
			<directory>src/main/release</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.txt</include>
				<include>*.properties</include>
			</includes>
		</fileSet>

		<!-- Copy samples -->
		<fileSet>
			<directory>../../../samples/jbossas</directory>
			<outputDirectory>samples</outputDirectory>
			<excludes>
				<exclude>pom.xml</exclude>
				<exclude>**/.*</exclude>
				<exclude>**/target/**</exclude>
				<exclude>**/.settings/**</exclude>
			</excludes>
		</fileSet>

		<!-- Copy war build module -->
<!--
		<fileSet>
			<directory>../war</directory>
			<outputDirectory>build</outputDirectory>
			<excludes>
				<exclude>**/.*</exclude>
				<exclude>**/target/**</exclude>
				<exclude>**/.settings/**</exclude>
			</excludes>
		</fileSet>
-->

		<!-- Copy modules and deployments -->
		<fileSet>
			<directory>src/main/jbossas</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>

	</fileSets>
    
	<dependencySets>

		<dependencySet>
			<outputDirectory>deployments/server</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.overlord.rtgov.release.jbossas:overlord-rtgov:war</include>
				<include>org.overlord.rtgov.content:overlord-rtgov-epn:war</include>
				<include>org.overlord.rtgov.content:overlord-rtgov-acs:war</include>
				<include>org.overlord.rtgov.content.services:overlord-rtgov-services:war</include>
				<include>org.overlord.gadgets.server:gadgets:war</include>
				<include>org.overlord.gadgets.server:gadget-server:war</include>
				<include>org.overlord.gadgets.server:gadget-web:war</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>deployments/restc</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.overlord.rtgov.release.jbossas:overlord-rtgov-client-rest:war</include>
			</includes>
			<outputFileNameMapping>overlord-rtgov.war</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>org.overlord.rtgov.release.jbossas:module:zip</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}</outputFileNameMapping>
		</dependencySet>
        
	</dependencySets>

</assembly>
