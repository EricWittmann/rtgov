<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.overlord.bam.samples.jbossas</groupId>
	<artifactId>slamonitor</artifactId>
	<packaging>pom</packaging>
	<version>1.0.0-SNAPSHOT</version>
	<name>Overlord BAM::Samples::JBossAS::SLAMonitor</name>

	<parent>
		<groupId>org.overlord.bam.samples.jbossas</groupId>
		<artifactId>parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<modules>
		<module>orders</module>
		<module>epn</module>
		<module>monitor</module>
	</modules>

	<profiles>
		<profile>
			<id>jbossas</id>
			<activation>
				<property>
                    			<name>env.JBOSS_HOME</name>
                		</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.7</version>
						<executions>
							<execution>
								<id>install</id>
								<phase>install</phase>
								<configuration>
									<target>
										<echo message="Install SLA Monitor sample at: ${env.JBOSS_HOME}"/>
										<copy todir="${env.JBOSS_HOME}/standalone/deployments" >
											<fileset file="target/*.war" />
										</copy>
									</target>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>

