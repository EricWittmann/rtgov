<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.overlord.rtgov.release.jbossas</groupId>
	<artifactId>distribution</artifactId>
	<packaging>pom</packaging>
	<name>Overlord RTGov::Release::JBossAS::Distribution</name>

	<parent>
		<groupId>org.overlord.rtgov.release</groupId>
		<artifactId>jbossas</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>org.overlord.rtgov.release.jbossas</groupId>
			<artifactId>overlord-rtgov</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.rtgov.release.jbossas</groupId>
			<artifactId>overlord-rtgov-client-rest</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.rtgov.release.jbossas</groupId>
			<artifactId>overlord-rtgov-switchyard</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.rtgov.content</groupId>
			<artifactId>overlord-rtgov-epn</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.rtgov.content</groupId>
			<artifactId>overlord-rtgov-acs</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.rtgov.release.jbossas</groupId>
			<artifactId>module</artifactId>
			<version>${project.version}</version>
			<type>zip</type>
		</dependency>

		<dependency>
			<groupId>org.overlord.gadgets.server</groupId>
			<artifactId>distribution</artifactId>
			<type>zip</type>
		</dependency>
	</dependencies> 

	<build>
		<resources>
			<resource>
 				<directory>src/main/java</directory>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>bin</id>
						<phase>process-resources</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<finalName>overlord-rtgov-jbossas-${project.version}</finalName>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>src/main/assembly/jbossas-bin.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<configuration>
						<skip>true</skip>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>
