<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.overlord.bam.release.jbossas</groupId>
	<artifactId>distribution</artifactId>
	<packaging>pom</packaging>
	<version>1.0.0-SNAPSHOT</version>
	<name>Overlord BAM::Release::JBossAS::Distribution</name>

	<parent>
		<groupId>org.overlord.bam.release</groupId>
		<artifactId>jbossas</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>org.overlord.bam.release.jbossas</groupId>
			<artifactId>overlord-bam</artifactId>
			<version>${bam.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.content</groupId>
			<artifactId>overlord-bam-epn</artifactId>
			<version>${bam.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.content</groupId>
			<artifactId>overlord-bam-acs</artifactId>
			<version>${bam.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.content.services</groupId>
			<artifactId>overlord-bam-services</artifactId>
			<version>${bam.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.activity-management</groupId>
			<artifactId>activity</artifactId>
			<version>${bam.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.event-processor-network</groupId>
			<artifactId>epn-core</artifactId>
			<version>${bam.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.event-processor-network</groupId>
			<artifactId>epn-processor-cep</artifactId>
			<version>${bam.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.active-queries</groupId>
			<artifactId>active-collection</artifactId>
			<version>${bam.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.active-queries</groupId>
			<artifactId>acs-epn</artifactId>
			<version>${bam.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.activity-analysis</groupId>
			<artifactId>service-analytics</artifactId>
			<version>${bam.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.activity-analysis</groupId>
			<artifactId>service-dependency</artifactId>
			<version>${bam.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.activity-analysis</groupId>
			<artifactId>service-dependency-svg</artifactId>
			<version>${bam.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.gadgets.server</groupId>
			<artifactId>gadgets</artifactId>
			<version>${gadgets.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.gadgets.server</groupId>
			<artifactId>gadget-server</artifactId>
			<version>${gadgets.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.overlord.gadgets.server</groupId>
			<artifactId>gadget-web</artifactId>
			<version>${gadgets.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-core-asl</artifactId>
           		<version>${jackson.version}</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-mapper-asl</artifactId>
           		<version>${jackson.version}</version>
		</dependency>
	</dependencies> 

	<build>
		<resources>
			<resource>
 				<directory>src/main/java</directory>
				<includes>
					<include>**/*</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-2</version>
				<executions>
					<execution>
						<id>bin</id>
						<phase>process-resources</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<finalName>overlord-bam-jbossas-${project.version}</finalName>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>src/main/assembly/jbossas-bin.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
