<project default="setup">
	<target name="setup">
		<echo message="Setting up BAM modules"/>
	
		<delete dir="${jboss.home}/modules/org/overlord/bam" />
		
		<copy file="${basedir}/src/test/modules/module.xml"
				todir="${jboss.home}/modules/org/overlord/bam/main" />

		<copy file="${org.overlord.bam.activity-management:activity:jar}"
				tofile="${jboss.home}/modules/org/overlord/bam/main/activity.jar" />
		<copy file="${org.overlord.bam.event-processor-network:epn-core:jar}"
				tofile="${jboss.home}/modules/org/overlord/bam/main/epn-core.jar" />
		<copy file="${org.overlord.bam.event-processor-network:epn-cep:jar}"
				tofile="${jboss.home}/modules/org/overlord/bam/main/epn-cep.jar" />
		<copy file="${org.overlord.bam.event-processor-network:epn-infinispan:jar}"
				tofile="${jboss.home}/modules/org/overlord/bam/main/epn-infinispan.jar" />
		<copy file="${org.overlord.bam.event-processor-network:epn-mvel:jar}"
				tofile="${jboss.home}/modules/org/overlord/bam/main/epn-mvel.jar" />
		<copy file="${org.overlord.bam.active-queries:active-collection:jar}"
				tofile="${jboss.home}/modules/org/overlord/bam/main/active-collection.jar" />
		<copy file="${org.overlord.bam.active-queries:acs-epn:jar}"
				tofile="${jboss.home}/modules/org/overlord/bam/main/acs-epn.jar" />
		<copy file="${org.overlord.bam.activity-analysis:analytics:jar}"
				tofile="${jboss.home}/modules/org/overlord/bam/main/analytics.jar" />
	</target>

	<target name="clean">
		<echo message="Cleaning up BAM modules"/>
		<delete dir="${jboss.home}/modules/org/overlord/bam" />
	</target>

</project>
