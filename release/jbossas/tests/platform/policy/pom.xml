<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  	<modelVersion>4.0.0</modelVersion>
	<groupId>org.overlord.bam.release.jbossas.tests.platform</groupId>
	<artifactId>tests-jbossas-policy</artifactId> 
	<packaging>jar</packaging>
	<name>Overlord BAM::Release::JBossAS::Tests::Platform::Policy</name>

	<parent>
		<groupId>org.overlord.bam.release.jbossas.tests</groupId>
		<artifactId>platform</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	
	<dependencies>
		<dependency>
			<groupId>org.overlord.bam.samples.jbossas</groupId>
			<artifactId>samples-jbossas-ordermgmt</artifactId>
			<type>war</type>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.samples.jbossas.policy</groupId>
			<artifactId>samples-jbossas-policy-epn</artifactId>
			<type>war</type>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>org.overlord.bam.release.jbossas</groupId>
			<artifactId>overlord-bam</artifactId>
			<type>war</type>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>org.overlord.bam.event-processor-network</groupId>
			<artifactId>epn-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.event-processor-network</groupId>
			<artifactId>epn-cep</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.event-processor-network</groupId>
			<artifactId>epn-infinispan</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.event-processor-network</groupId>
			<artifactId>epn-mvel</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.event-processor-network</groupId>
			<artifactId>epn-container-jee</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.overlord.bam.active-queries</groupId>
			<artifactId>active-collection</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.active-queries</groupId>
			<artifactId>acs-epn</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>org.overlord.bam.activity-management</groupId>
			<artifactId>activity</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.activity-analysis</groupId>
			<artifactId>analytics</artifactId>
			<version>${project.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.jboss.as</groupId>
			<artifactId>jboss-as-arquillian-container-managed</artifactId>
		</dependency>

		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.shrinkwrap.resolver</groupId>
			<artifactId>shrinkwrap-resolver-impl-maven</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.arquillian.junit</groupId>
			<artifactId>arquillian-junit-container</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<systemProperties>
						<property>
							<name>bam.version</name>
							<value>${project.version}</value>
						</property>
					</systemProperties>
					<includes>
						<include>**/*TestCase.java</include>
						<include>**/*Test.java</include>
					</includes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>compile</id>
						<phase>compile</phase>
						<configuration>
							<target>
								<property name="jboss.home" value="${env.JBOSS_HOME}"/>
								<ant antfile="${basedir}/../../build.xml" target="setup" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>post-integration-test</id>
						<phase>post-integration-test</phase>
						<configuration>
							<target>
								<property name="jboss.home" value="${env.JBOSS_HOME}"/>
								<ant antfile="${basedir}/../../build.xml" target="clean" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>	
	
</project>
