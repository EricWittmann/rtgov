<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  	<modelVersion>4.0.0</modelVersion>
	<groupId>org.overlord.bam.release.jbossas</groupId>
	<artifactId>overlord-bam</artifactId> 
	<version>1.0.0-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>Overlord BAM::Release::JBossAS::War</name>

	<parent>
		<groupId>org.overlord.bam.release</groupId>
		<artifactId>jbossas</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<dependencies>		
		<!-- Collector modules -->
		
		<dependency>
			<groupId>org.overlord.bam.activity-management</groupId>
			<artifactId>collector-jee</artifactId>
			<version>${bam.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.overlord.bam.activity-management</groupId>
					<artifactId>activity</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.activity-management</groupId>
			<artifactId>collector-activity-server</artifactId>
			<version>${bam.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.overlord.bam.activity-management</groupId>
					<artifactId>activity</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<!-- Activity Server modules -->
		
		<dependency>
			<groupId>org.overlord.bam.activity-management</groupId>
			<artifactId>activity-server-impl</artifactId>
			<version>${bam.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.overlord.bam.activity-management</groupId>
					<artifactId>activity</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.activity-management</groupId>
			<artifactId>activity-server-rests</artifactId>
			<version>${bam.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.overlord.bam.activity-management</groupId>
					<artifactId>activity</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.activity-management</groupId>
			<artifactId>activity-store-jpa</artifactId>
			<version>${bam.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.overlord.bam.activity-management</groupId>
					<artifactId>activity</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.overlord.bam.activity-management</groupId>
			<artifactId>activity-server-epn</artifactId>
			<version>${bam.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.overlord.bam.activity-management</groupId>
					<artifactId>activity</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.overlord.bam.event-processor-network</groupId>
					<artifactId>epn-core</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<!-- Event Processor Network modules -->
			
		<dependency>
			<groupId>org.overlord.bam.event-processor-network</groupId>
			<artifactId>epn-container-jee</artifactId>
			<version>${bam.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.overlord.bam.event-processor-network</groupId>
					<artifactId>epn-core</artifactId>
				</exclusion>
			</exclusions>
		</dependency>	
		
		<!-- Active collection modules -->
		
		<dependency>
			<groupId>org.overlord.bam.active-queries</groupId>
			<artifactId>active-collection-jee</artifactId>
			<version>${bam.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.overlord.bam.active-queries</groupId>
					<artifactId>active-collection</artifactId>
				</exclusion>
			</exclusions>
		</dependency>		
		<dependency>
			<groupId>org.overlord.bam.active-queries</groupId>
			<artifactId>active-collection-rests</artifactId>
			<version>${bam.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.overlord.bam.active-queries</groupId>
					<artifactId>active-collection</artifactId>
				</exclusion>
			</exclusions>
		</dependency>		

		<!-- JBossAS Specific -->
		
		<dependency>
			<groupId>org.overlord.bam.integration</groupId>
			<artifactId>bam-jbossas</artifactId>
			<version>${bam.version}</version>
		</dependency>
		
		<!-- Test dependencies -->
		
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
           		<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<finalName>${project.artifactId}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
 					<archive>
						<manifestEntries>
							<Dependencies>org.overlord.bam export</Dependencies>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
