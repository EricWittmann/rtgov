

String colour="#00FF00";
double gap=metric.getMax()-metric.getMin();

if (gap > 0) {
    double mid=metric.getAverage()-metric.getMin();
    
    double ratio=mid/gap;
    
    if (ratio > 0.95) {
        colour = "#FF0000";
    } else if (ratio > 0.9) {
        colour = "#FF3300";
    } else if (ratio > 0.85) {
        colour = "#FF5930";
    } else if (ratio > 0.8) {
        colour = "#FF6A45";
    } else if (ratio > 0.75) {
        colour = "#FF9479";
    } else if (ratio > 0.7) {
        colour = "#FF9900";
    }
}

return (colour);
