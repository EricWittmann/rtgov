<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  	<modelVersion>4.0.0</modelVersion>
	<groupId>org.savara.bam.tests.platform.jbossas</groupId>
	<artifactId>tests-jbossas-slamonitor</artifactId> 
	<version>1.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Savara BAM::Tests::Platforms::JBossAS::SLAMonitor</name>

	<parent>
		<groupId>org.savara.bam.tests.platforms</groupId>
		<artifactId>jbossas</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.jboss.arquillian</groupId>
				<artifactId>arquillian-bom</artifactId>
				<version>${arquillian.version}</version>
				<scope>import</scope>
				<type>pom</type>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<dependencies>
		<dependency>
			<groupId>org.savara.bam.samples.jbossas.slamonitor</groupId>
			<artifactId>samples-jbossas-slamonitor-orders</artifactId>
			<type>war</type>
			<version>${bam.version}</version>
		</dependency>
		<dependency>
			<groupId>org.savara.bam.samples.jbossas.slamonitor</groupId>
			<artifactId>samples-jbossas-slamonitor-epn</artifactId>
			<type>war</type>
			<version>${bam.version}</version>
		</dependency>

		<dependency>
			<groupId>org.savara.bam.distribution.jee</groupId>
			<artifactId>savara-bam</artifactId>
			<type>war</type>
			<classifier>${platform}</classifier>
			<version>${bam.version}</version>
		</dependency>

		<dependency>
			<groupId>org.savara.bam.event-processor-network</groupId>
			<artifactId>epn-core</artifactId>
			<version>${bam.version}</version>
		</dependency>
		<dependency>
			<groupId>org.savara.bam.event-processor-network</groupId>
			<artifactId>epn-container-jee</artifactId>
			<version>${bam.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.savara.bam.activity-management</groupId>
			<artifactId>activity-model</artifactId>
			<version>${bam.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.savara.bam.activity-analysis</groupId>
			<artifactId>service-analytics</artifactId>
			<version>${bam.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.jboss.as</groupId>
			<artifactId>jboss-as-arquillian-container-managed</artifactId>
			<version>${arquillian.jbossas.version}</version>
		</dependency>

		<dependency>
		    <groupId>javax</groupId>
		    <artifactId>javaee-api</artifactId>
		    <version>6.0</version>
		    <scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.shrinkwrap.resolver</groupId>
			<artifactId>shrinkwrap-resolver-impl-maven</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.arquillian.junit</groupId>
			<artifactId>arquillian-junit-container</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<systemProperties>
						<property>
							<name>bam.version</name>
							<value>${project.version}</value>
						</property>
						<property>
							<name>bam.platform</name>
							<value>${platform}</value>
						</property>
					</systemProperties>
					<includes>
						<include>**/*TestCase.java</include>
						<include>**/*Test.java</include>
					</includes>
				</configuration>
			</plugin>
		</plugins>
	</build>	
	
</project>
