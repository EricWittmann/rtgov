<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  	<modelVersion>4.0.0</modelVersion>
	<groupId>org.savara.bam.tests.platform.jbossas</groupId>
	<artifactId>tests-jbossas-custom-events-monitor</artifactId> 
	<version>1.0.0-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>Savara BAM::Tests::Platforms::JBossAS::CustomEventsMonitor</name>

	<parent>
		<groupId>org.savara.bam.tests.platforms</groupId>
		<artifactId>jbossas</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<dependencies>
		<dependency>
			<groupId>org.savara.bam.event-processor-network</groupId>
			<artifactId>epn-core</artifactId>
			<version>${bam.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.savara.bam.tests.platform.jbossas</groupId>
			<artifactId>tests-jbossas-custom-events-data</artifactId>
			<version>${bam.version}</version>
		</dependency>
		
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<version>6.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
 					<archive>
						<manifestEntries>
							<Dependencies>deployment.savara-bam.war</Dependencies>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
