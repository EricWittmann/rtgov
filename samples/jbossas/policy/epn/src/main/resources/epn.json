{
  "name" : "PolicyEPN",
  "subscriptions" : [ {
    "nodeName" : "SampleBusinessPolicy",
    "subject" : "SOAEvents"
  } ],
  "nodes" : [
    {
      "name" : "SampleBusinessPolicy",
      "sourceNodes" : [ ],
      "destinationSubjects" : [ ],
      "maxRetries" : 3,
      "retryInterval" : 0,
      "eventProcessor" : {
        "@class" : "org.overlord.bam.epn.mvel.MVELEventProcessor",
        "script" : "SampleBusinessPolicy.mvel",
        "services" : {
          "CacheManager" : {
            "@class" : "org.overlord.bam.epn.service.infinispan.InfinispanCacheManager"
          }
        }
      },
      "predicate" : {
        "@class" : "org.overlord.bam.epn.mvel.MVELPredicate",
        "expression" : "event.serviceProvider && !event.request && event.serviceType == \"{urn:switchyard-quickstart-demo:orders:0.1.0}OrderService\""
      }
    }
  ],
  "version" : "1"
}