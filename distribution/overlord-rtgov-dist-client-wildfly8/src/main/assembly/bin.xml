<assembly>
	<!-- id typically identifies the "type" (src vs bin etc) of the assembly -->
	<id>bin</id>
	<includeBaseDirectory>true</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>

	<fileSets>

		<!--Copy files from template -->	
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>

		<!-- Copy samples -->
		<fileSet>
			<directory>../../samples/jbossas</directory>
			<outputDirectory>samples</outputDirectory>
			<excludes>
				<exclude>**/.*</exclude>
				<exclude>**/target/**</exclude>
				<exclude>**/bin/**</exclude>
				<exclude>**/.settings/**</exclude>
				<exclude>**/*epn/**</exclude>
				<exclude>**/sla/**</exclude>
			</excludes>
		</fileSet>

	</fileSets>
    
	<dependencySets>

        <dependencySet>
              <outputDirectory>lib</outputDirectory>
	      <includes>    
		    <include>org.apache.ant:ant:jar</include>
		    <include>org.apache.ant:ant-launcher:jar</include>
	      </includes>
	      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
	      <useProjectArtifact>false</useProjectArtifact>
	      <useProjectAttachments>false</useProjectAttachments>
	      <useTransitiveDependencies>false</useTransitiveDependencies>
	      <useTransitiveFiltering>false</useTransitiveFiltering>
	      <directoryMode>0755</directoryMode>
	      <fileMode>0755</fileMode>
        </dependencySet>

        <!-- Documentation -->
        <dependencySet>
            <outputDirectory>docs/developerguide</outputDirectory>
            <includes>
                <include>org.overlord.rtgov.docs:rtgov-developerguide:jdocbook</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>**/META-INF/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <outputDirectory>docs/userguide</outputDirectory>
            <includes>
                <include>org.overlord.rtgov.docs:rtgov-userguide:jdocbook</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>**/META-INF/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <outputDirectory>docs/javadoc</outputDirectory>
            <includes>
                <include>org.overlord.rtgov.docs:rtgov-javadoc:javadoc</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>**/META-INF/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <outputDirectory>docs/restapi</outputDirectory>
            <includes>
                <include>org.overlord.rtgov.docs:rtgov-restapi:zip</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>**/META-INF/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>

		<!-- Wildfly8 'client' profile -->

		<dependencySet>
			<outputDirectory>deployments</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.overlord.rtgov:overlord-rtgov-client-wildfly8:war</include>
			</includes>
			<outputFileNameMapping>overlord-rtgov.war</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>deployments</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.overlord.rtgov:overlord-rtgov-switchyard-eap6:war</include>
			</includes>
			<outputFileNameMapping>overlord-rtgov-switchyard.war</outputFileNameMapping>
		</dependencySet>

	</dependencySets>

</assembly>
