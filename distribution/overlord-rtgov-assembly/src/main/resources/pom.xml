<project xmlns="http://maven.apache.org/POM/4.0.0" 
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.overlord.rtgov</groupId>
	<artifactId>install</artifactId>
	<version>2.0.0.Alpha1_1</version>
	<packaging>pom</packaging>
	<name>Overlord RTGov::Install</name>
	<url>http://www.jboss.org/overlord</url>
	<description>
		The Overlord Runtime Governance project
	</description>

	<scm>
		<connection>https://github.com/Governance</connection>
		<url>https://github.com/Governance</url>
	</scm>

	<licenses>
		<license>
			<name>Apache License</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
			<distribution>repo</distribution>
			<comments>Apache License</comments>
		</license>
	</licenses>

	<properties>
		<platform>eap6</platform>
		<type>all</type>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>install</id>
						<phase>install</phase>
						<configuration>
							<target>
								<echo message="Install Overlord Runtime Governance at: ${env.JBOSS_HOME}"/>
								<property name="abs.basedir" location="${basedir}" />

								<ant antfile="platforms/${platform}/${type}/build.xml" target="deploy">
									<property name="jboss.home" value="${env.JBOSS_HOME}" />
									<property name="basedir" value="${abs.basedir}/platforms/${platform}/${type}" />
								</ant>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
					<execution>
						<id>clean</id>
						<phase>clean</phase>
						<configuration>
							<target>
								<echo message="Remove Overlord Runtime Governance from: ${env.JBOSS_HOME}"/>

								<ant antfile="platforms/${platform}/${type}/build.xml" target="undeploy">
									<property name="jboss.home" value="${env.JBOSS_HOME}" />
									<property name="basedir" value="platforms/${platform}/${type}" />
								</ant>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
